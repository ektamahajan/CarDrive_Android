<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:id="@+id/usedcarcontaimer">
    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/smallscreenbackground"
        app:tabTextColor="@color/cardViewTextColor"
        app:tabMode="scrollable"
        app:tabIndicatorColor="@color/headingcolor"
        app:tabGravity="fill">
        <!--app:tabSelectedColor="#FFFFFF"-->

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/screenbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pager"
        tools:context=".Activity_ViewPager"/>
</LinearLayout>
