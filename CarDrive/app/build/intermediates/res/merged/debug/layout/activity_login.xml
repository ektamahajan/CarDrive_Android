
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbarStyle="insideInset"
    android:scrollbars="vertical" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenbackground"
    tools:context="com.example.paras.apfinalproject.LoginActivity"
    android:id="@+id/loginContainer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/createAccount"
        android:textColor="@color/headingcolor"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerHorizontal="true" />

<RelativeLayout
    android:layout_width="wrap_content"
    android:background="@drawable/loginboundary"
    android:layout_below="@+id/createAccount"
    android:id="@+id/login1"
    android:layout_marginLeft="7dp"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Enter your password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:padding="14dp"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE"
        android:textSize="15.3sp"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/edit_text_email"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="350dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:padding="14dp"
        android:layout_alignRight="@+id/edit_text_password"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE"
        android:textSize="15.3sp"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="Create User"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_below="@id/edit_text_password"
        android:textSize="15dp"
        android:textColor="@drawable/button_text_color"
        android:background="@drawable/button_shape"
        android:id="@+id/button"
        android:gravity="center"
        android:layout_marginStart="100dp"
        android:layout_centerVertical="true" />

</RelativeLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login1"
        android:text="Already have a account ?"
        android:textSize="15dp"
        android:id="@+id/loginTV"
        android:textColor="@color/headingcolor"
        android:textStyle="italic|bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />


    <Button
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="Login"
        android:id="@+id/login"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textColor="@drawable/button_text_color"
        android:background="@drawable/button_shape"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/loginTV"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="Forgot Password"
        android:id="@+id/forgot"
        android:textStyle="bold"
        android:textColor="@drawable/button_text_color"
        android:background="@drawable/button_shape"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/login"/>

</RelativeLayout>
</ScrollView>