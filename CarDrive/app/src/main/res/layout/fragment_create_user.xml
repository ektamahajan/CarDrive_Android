
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbarStyle="insideInset"
    android:scrollbars="vertical" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:background="@drawable/screenbackground"
    android:layout_height="match_parent"
    tools:context="com.example.paras.apfinalproject.CreateUserFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Sign Up"
        android:paddingBottom="40dp"
        android:layout_alignParentTop="true"
        android:id="@+id/selectcar11"
        android:textColor="@color/headingcolor"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerHorizontal="true" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="1dp"
        android:gravity="center_vertical"
        android:background="@drawable/cardetail"
        android:id="@+id/content"
        android:layout_below="@+id/selectcar11"
        tools:context="com.example.paras.apfinalproject.CreateUserFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:textColor="@color/textColor"
        android:layout_alignTop="@+id/editName" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:paddingRight="20dp"
        android:inputType="text"
        android:padding="14dp"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE"
        android:textSize="20dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:layout_marginTop="10dp"
        android:id="@+id/textView1"
        android:layout_below="@+id/editName"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editNumber"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:hint="Enter your number"
        android:inputType="number"
        android:padding="14dp"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE"
        android:textSize="20dp"
        android:layout_below="@+id/editName"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:layout_marginTop="10dp"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/editAddress"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editAddress"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:hint="Enter your Address"
        android:inputType="text"
        android:padding="14dp"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE"
        android:textSize="20dp"
        android:layout_below="@+id/editNumber"
        android:layout_alignStart="@+id/editNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:layout_marginTop="10dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/editAddress"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editCity"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:hint="Enter your City"
        android:inputType="text"
        android:padding="14dp"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE"
        android:textSize="20dp"
        android:layout_below="@+id/editAddress"
        android:layout_alignStart="@+id/editAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State:"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:id="@+id/textView7"
        android:layout_below="@+id/editCity"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editState"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:hint="Enter your State"
        android:inputType="text"
        android:padding="14dp"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE"
        android:textSize="20dp"
        android:layout_below="@+id/editCity"
        android:layout_alignStart="@+id/editCity" />


</RelativeLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="Continue"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_below="@+id/content"
        android:textColor="@drawable/button_text_color"
        android:background="@drawable/button_shape"
        android:textSize="15dp"
        android:id="@+id/continueButton"
        android:layout_marginTop="35dp"
        android:layout_alignStart="@+id/selectcar11" />

</RelativeLayout>

    </ScrollView>